#ifndef LIST_CLASS
#define LIST_CLASS

class List {
private:
    int* array;
    int count;
    int capacity;
public:
    List ()
    {
        capacity = 8;
        count = 0;
        array = new int[capacity];
    }
    ~List () {}

    void append (int a)
    {
        if (count < capacity) {
            array[count+1] = a;
            count++;
        } else {
            int* temp = array;
            capacity = capacity * 2;

            array = new int[capacity];

            for (int i = 0; i <= count; i++) {
                array[i] = temp[i];
            }
            delete []temp;

            array[count+1] = a;
            count++;
        }
    }
    int retrieve (int index)
    {
        return array[index];
    }
    int pop ()
    {
        int temp = array[count];
        array[count] = 0; // value is arbitrary since count is decreased
        count--;
        return temp;
    }
    int pop (int index) {
        int temp = array[index];

        if (count > index) {
            for (int i = index; i < count; i++) {
                array[i] = array[i+1];
            }
        }
        array[count] = 0; // value is arbitrary, as count is decreased
        count--;

        return temp;
    }
    int length ()
    {
        return count;
    }
};

#endif
